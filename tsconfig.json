{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": false,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "allowJs": true,
    "checkJs": false
  },
  "include": [
    "controllers/**/*.ts",
    "services/**/*.ts",
    "types/**/*.ts",
    "middleware/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "frontend", "**/*.test.ts"]
}
